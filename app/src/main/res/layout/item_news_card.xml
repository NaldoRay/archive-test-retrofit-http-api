<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/card_padding"
                                    android:layout_marginRight="@dimen/card_padding"
                                    android:layout_marginLeft="@dimen/card_padding">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_text_horizontal_padding"
            android:paddingRight="@dimen/card_text_horizontal_padding"
            android:paddingTop="@dimen/card_title_vertical_padding"
            android:paddingBottom="@dimen/card_text_vertical_padding"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/contentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleText"
            android:paddingLeft="@dimen/card_text_horizontal_padding"
            android:paddingRight="@dimen/card_text_horizontal_padding"
            android:paddingBottom="@dimen/card_text_vertical_padding"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:maxLines="3"
            android:ellipsize="end" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/contentText"
            android:padding="@dimen/card_action_padding"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorAccent"
            android:text="Share"/>
        <Button
            android:id="@+id/moreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/shareButton"
            android:padding="@dimen/card_action_padding"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorAccent"
            android:text="More"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>